{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - Streemi{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-8">{{ category.name }}</h1>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for media in category.medias %}
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    {% if media.coverImage %}
                        <img src="{{ media.coverImage }}" alt="{{ media.title }}" class="w-full h-48 object-cover">
                    {% endif %}
                    <div class="p-4">
                        <h2 class="text-xl font-semibold mb-2">{{ media.title }}</h2>
                        <p class="text-gray-600 mb-4">{{ media.shortDescription }}</p>
                        <div class="flex justify-between items-center">
                            <span class="text-sm text-gray-500">{{ media.releaseDate|date('Y') }}</span>
                            <a href="{{ path('media_detail', {'id': media.id}) }}" class="text-red-600 hover:text-red-700">Voir plus</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="col-span-3 text-center text-gray-500">Aucun média dans cette catégorie</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
