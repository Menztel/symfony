{% extends 'base.html.twig' %}

{% block content %}
<div class="flex min-h-screen">
    {%  include 'parts/menu-left.html.twig'  %}
    <main class="flex-1">
        <section class="h-full relative">
            <div style="background-image: url('https://blog.compose.fr/wp-content/uploads/2024/05/Marathon-Cinema.webp')" class="bg-cover bg-no-repeat h-full before:bg-black/40 before:content-[''] before:top-0 before:left-0 before:right-0 before:absolute before:w-full before:h-full">
                <div class="p-8 lg:w-1/2 mx-auto h-full flex items-center justify-center">
                    <div class="bg-white rounded-lg p-8 relative w-full">
                        <h1 class="text-center text-lg font-bold mb-6">Créer un compte</h1>

                        {% if error %}
                            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        {{ form_start(registrationForm, {'attr': {'class': 'mt-6 space-y-6'}}) }}
                            <div>
                                {{ form_label(registrationForm.username, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                                {{ form_widget(registrationForm.username, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500'}}) }}
                                {{ form_errors(registrationForm.username) }}
                            </div>

                            <div>
                                {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                                {{ form_widget(registrationForm.email, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500'}}) }}
                                {{ form_errors(registrationForm.email) }}
                            </div>

                            <div>
                                {{ form_label(registrationForm.plainPassword.first, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                                {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500'}}) }}
                                {{ form_errors(registrationForm.plainPassword.first) }}
                            </div>

                            <div>
                                {{ form_label(registrationForm.plainPassword.second, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                                {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500'}}) }}
                                {{ form_errors(registrationForm.plainPassword.second) }}
                            </div>

                            <div>
                                <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                                    S'inscrire
                                </button>
                            </div>

                            <div class="text-center mt-4">
                                <a href="{{ path('app_login') }}" class="text-sm text-red-600 hover:text-red-500">
                                    Déjà un compte ? Se connecter
                                </a>
                            </div>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </section>
    </main>
</div>
{% endblock %}
